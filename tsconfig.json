{
  "compilerOptions": {
    "rootDir": "src/",
    "baseUrl": "src/",
    "module": "ES2022",
    "moduleResolution": "node",
    "target": "ES2022",
    "jsx": "react",
    "allowJs": false,
    "noImplicitAny": true,
    "strict": true,
    "skipLibCheck": true,
    "outDir": "out",
    "forceConsistentCasingInFileNames": true,
  },
  "include": [ "src/**/*" ],
  "exclude": ["node_modules", "**/node_modules/*"],
  "files": ["typings.d.ts"]
}
